@model IEnumerable<NimapInfotechProject.SqlContext.SpProduct_Result>
@{ 
    Layout = null;
}
<table class="table">
    <tr>
        <th>
          Product Id
        </th>
        <th>
          Product Name
        </th>
        <th>
          Category Id
        </th>
        <th>
          Category Name
        </th>
        <th>Edit/Delete</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditData", new {  id=item.ProductId }) |
            @Html.ActionLink("Delete", "DeleteData", new {  id=item.ProductId })
        </td>
    </tr>
}

</table>
