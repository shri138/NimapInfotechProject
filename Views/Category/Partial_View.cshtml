@model NimapInfotechProject.Models.CategoryModel

@using (Html.BeginForm("SaveRecord", "Category", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label class="small mb-1"> Product Name<small style="color:red">*</small></label>
                @Html.HiddenFor(m => m.CategoryId)
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
            </div>
        </div>

    </div>
    <div class="form-group mt-4 mb-0 form-actions">
        <button type="submit" class="btn btn-danger"> Save Record </button>
    </div>
}
